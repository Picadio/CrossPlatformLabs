@model IEnumerable<Lab5.Models.Customer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Customers</h1>

<form asp-action="Index" method="get" class="form-inline mb-3">
    <div class="form-group">
        <input 
            type="text" 
            name="name" 
            value="@ViewData["SearchQueryName"]" 
            class="form-control mr-2" 
            placeholder="Пошук за назвою.. (можно через кому: Alex, F, Nick)" />
        <button type="submit" class="btn btn-primary">Шукати</button>
    </div>
</form>
<a asp-action="Index">Reset</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerEmail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerEmail)
            </td>
           <td>
               <a asp-action="Details" asp-route-id="@item.CustomerId">Details</a>
           </td>
        </tr>
}
    </tbody>
</table>
